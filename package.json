{
  "name": "mernstarter",
  "description": "MERN Starter, Top level await, TypeScript, SWC, Prima",
  "version": "1.0.0",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "build": "swc src -d build",
    "dev": "swc src -d build --watch & nodemon",
    "start": "node --experimental-specifier-resolution=node build/server.js",
    "worker:start": "node --experimental-specifier-resolution=node build/worker.js",
    "seed": "prisma db seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "bcrypt": "^5.0.1",
    "exec-sh": "^0.4.0",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "radash": "^7.1.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.249",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.16",
    "dotenv": "^16.0.2",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.3.1"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      ".env"
    ],
    "ext": "ts,js,json,.env",
    "exec": "node --experimental-specifier-resolution=node build/server.js"
  },
  "prisma": {
    "schema": "src/database/schema.prisma",
    "seed": "node --experimental-specifier-resolution=node build/database/seed.js"
  }
}
